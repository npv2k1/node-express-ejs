<div class="w-full md:w-64 mb-4 border rounded-lg p-4 shadow-md px-5" >
  <a href="/<%= product.name %>">
    <img class="h-64 mb-4 mx-auto" src="<%= product.image%>" alt="">
  </a>
  <div class="text-center">
    <h2 class="mb-4 text-lg">
      <%= product.name %>
    </h2>
    <div class="flex items-center justify-around mt-6">
      <span class="font-bold text-lg">Ä‘<%= product.price %></span>
      <button
        class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"
        onclick="addCart('<%= product._id %>')" data-pizza="<%= JSON.stringify(product) %>"
        class="add-to-cart py-1 px-6 rounded-full flex items-center font-bold">
        <span>+</span>
        <span class="ml-4">Add</span>
      </button>
    </div>
  </div>
</div>